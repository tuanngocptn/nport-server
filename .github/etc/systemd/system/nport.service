[Unit]
Description=Nport - Net Port Link
After=network.target

[Service]
ExecStart=/opt/bitnami/node/bin/node -r esm bin/server --port 3000
WorkingDirectory=/home/bitnami/nport-server
Restart=always
User=bitnami
Group=bitnami
Environment=PATH=/opt/bitnami/node/bin:/usr/bin:/bin
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target